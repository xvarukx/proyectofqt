<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  
   <link rel="icon" href="/assets/calendar.ico" />
    <title>ProyectoFQT</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    

  </head>
  <body>
   <h3>
  <strong>Descripcion:</strong>
  <%= @task.description %>
</h3>

<div class="padding-left-10">
<p>
  <strong>Estado:</strong>
  <%= @task.state %>
</p>

<p>
  <strong>Fecha:</strong>
  <%= @task.task_date %>
</p>

<p>
  <strong>Equipo:</strong>
  <%= @task.team.name %>
</p>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Escuela</th>
      <th>Zona</th>
    </tr>
  </thead>
  <tbody>
    <% @task.schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.zone.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<table class="table">
  <thead>
    <tr>
      <th>Usuarios</th>
    </tr>
  </thead>
  <tbody>
    <% @task.team.users.each do |user| %>
      <tr>
        <td><%= user.email %></td>        
      </tr>
    <% end %>
  </tbody>
</table>
  <br>
    <a href="http://localhost:3000/calendar">Calendario</a>
  </body>
</html>