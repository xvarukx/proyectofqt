<span class='list-title'>Equipos</span>
<div class="parent-links-create">
  <%= link_to 'Nuevo Equipo', new_team_path,class: 'btn btn-primary white'  %>
</div>
<table class='table'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td colspan=3>
        <%= link_to 'Mostrar',team,class: 'btn btn-default'%>
        <%= link_to 'Editar', edit_team_path(team),class: 'btn btn-default' %>
        <%= link_to 'Eliminar', team, class: 'btn btn-danger white', method: :delete, data: { confirm: 'Are you sure?' } %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

