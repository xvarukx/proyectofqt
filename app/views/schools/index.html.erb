<span class='list-title'>Escuelas</span>
<%= link_to 'Nueva Escuela', new_school_path,class: 'btn btn-primary white' %>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Zona</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.zone_id %></td>
        <td colspan=3>
        <%= link_to 'Mostrar', school, class: 'btn btn-default' %>
        <%= link_to 'Editar', edit_school_path(school),class: 'btn btn-default' %>
        <%= link_to 'Eliminar', school,class: 'btn btn-danger white', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


