<span class="list-title">Tareas</span>
<div class="parent-links-create">
  <%= link_to 'Nueva Tarea', new_task_path,class:'btn btn-primary white'%>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estado</th>
      <th>Fecha de Tarea</th>
      <th>Equipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.state %></td>
        <td><%= task.task_date %></td>
        <td><%= task.team_id %></td>
        <td colspan=3>
          <%= link_to 'Mostrar', task, class: 'btn btn-default' %>
          <%= link_to 'Editar', edit_task_path(task), class: 'btn btn-default' %>
          <%= link_to 'Eliminar', task, class: 'btn btn-danger white', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


