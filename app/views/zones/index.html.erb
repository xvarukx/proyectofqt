<span class='list-title'>Zonas</span>
<%= link_to 'Nueva Zona', new_zone_path,class: 'btn btn-primary white' %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
        <td colspan="3">
          <%= link_to 'Mostrar', zone, class: 'btn btn-default' %>
          <%= link_to 'Editar', edit_zone_path(zone), class: 'btn btn-default' %>
          <%= link_to 'Eliminar', zone, class: 'btn btn-danger white', method: :delete%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


